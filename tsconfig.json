{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./lib/types",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["@types/node"]
  },
  "exclude": ["tsup.config.ts"]
}
